        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginEnd="238dp"
        android:layout_marginRight="238dp"
        android:layout_marginBottom="70dp"
        android:onClick="goToViewPost"
        android:src="@mipmap/ic_computer_networking" />

    <TextView
        android:id="@+id/currentBid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="598dp"
        android:layout_marginEnd="126dp"
        android:layout_marginRight="126dp"
        android:text="Current Bid: $0.69" />

    <TextView
        android:id="@+id/bookTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
